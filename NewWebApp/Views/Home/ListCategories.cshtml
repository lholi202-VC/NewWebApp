@model IEnumerable<NewWebApp.Model.UserDefinedCategory>


@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserDefinedCategoryId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.UserDefinedCategoryId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.UserDefinedCategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="ADMIN_HOME">ADMIN_HOME</a>
</div>


